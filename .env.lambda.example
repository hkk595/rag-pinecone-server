# Lambda Deployment Environment Variables
# Copy this to .env and fill in your actual values before deploying

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Pinecone Configuration (Required)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_HOST=https://rag-app.pinecone.io
PINECONE_INDEX_NAME=rag-app
PINECONE_NAMESPACE=__default__

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=1024

# LLM Configuration
LLM_MODEL=gpt-5
LLM_TEMPERATURE=0.7
MAX_RESPONSE_TOKENS=1000

# RAG Configuration
TOP_K_RESULTS=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Lambda-Specific (Optional - set during deployment via script)
# AWS_REGION=us-east-1
# FUNCTION_NAME=rag-app
# MEMORY_SIZE=2048
# TIMEOUT=300
